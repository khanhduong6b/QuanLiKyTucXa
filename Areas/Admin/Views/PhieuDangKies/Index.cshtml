@model IEnumerable<QuanLiKyTucXa.Models.PhieuDangKy>

@{
    ViewData["Title"] = "Index";
    ViewBag.contrl = "PhieuDangKies";
    ViewBag.active = 5;
}

<h1>Quản lý phiếu đăng ký</h1>

<p>
    <a asp-action="Create" asp-area="Admin" asp-controller="PhieuDangKies">Thêm mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaHoSo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayVao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TinhTrang)
            </th>
            <th>
                Mã sinh viên
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>    
                @Html.DisplayFor(modelItem => item.MaHoSo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayVao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TinhTrang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MssvNavigation.Mssv)
            </td>
            <td>
                    <a asp-action="Edit" asp-area="Admin" asp-controller="PhieuDangKies" asp-route-id="@item.MaHoSo">Chỉnh sửa</a> |
                    <a asp-action="Details" asp-area="Admin" asp-controller="PhieuDangKies" asp-route-id="@item.MaHoSo">Chi tiết</a> |
                    <a asp-action="Delete" asp-area="Admin" asp-controller="PhieuDangKies" asp-route-id="@item.MaHoSo">Xoá</a>
            </td>
        </tr>
}
    </tbody>
</table>

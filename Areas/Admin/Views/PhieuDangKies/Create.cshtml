@model QuanLiKyTucXa.Models.PhieuDangKy

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PhieuDangKy</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-area="Admin" asp-controller="PhieuDangKies" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaHoSo" class="control-label"></label>
                <input asp-for="MaHoSo" class="form-control" />
                <span asp-validation-for="MaHoSo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mssv" class="control-label"></label>
                <select asp-for="Mssv" class ="form-control" asp-items="ViewBag.Mssv"></select>
            </div>
            <div class="form-group">
                <label asp-for="NgayVao">Chọn ngày vào:</label>
                <input asp-for="NgayVao" class="form-control" type="date" />
                <span asp-validation-for="NgayVao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TinhTrang" class="control-label"></label>
                <input asp-for="TinhTrang" class="form-control" />
                <span asp-validation-for="TinhTrang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>


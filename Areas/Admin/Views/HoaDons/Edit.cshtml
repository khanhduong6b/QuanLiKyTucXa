@model QuanLiKyTucXa.Models.HoaDon

@{
    ViewData["Title"] = "Edit";
}

<h1>Chỉnh sửa hoá đơn</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaHoaDon" />
            <div class="form-group">
                <label asp-for="Thang" class="control-label"></label>
                <input asp-for="Thang" class="form-control" />
                <span asp-validation-for="Thang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChiSoDau" class="control-label"></label>
                <input asp-for="ChiSoDau" class="form-control" />
                <span asp-validation-for="ChiSoDau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChiSoCuoi" class="control-label"></label>
                <input asp-for="ChiSoCuoi" class="form-control" />
                <span asp-validation-for="ChiSoCuoi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GiaDien" class="control-label"></label>
                <input asp-for="GiaDien" class="form-control" />
                <span asp-validation-for="GiaDien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GiaNuoc" class="control-label"></label>
                <input asp-for="GiaNuoc" class="form-control" />
                <span asp-validation-for="GiaNuoc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrangThai" class="control-label"></label>
                <input asp-for="TrangThai" class="form-control" />
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mp" class="control-label"></label>
                <select asp-for="Mp" class="form-control" asp-items="ViewBag.Mp"></select>
                <span asp-validation-for="Mp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>

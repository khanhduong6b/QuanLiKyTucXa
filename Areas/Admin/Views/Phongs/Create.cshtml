@model QuanLiKyTucXa.Models.Phong

@{
    ViewData["Title"] = "Create";
}

<h1>Thêm mới phòng</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-area="Admin" asp-controller="Phongs" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Mp" class="control-label"></label>
                <input asp-for="Mp" class="form-control" />
                <span asp-validation-for="Mp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuongSvToiDa" class="control-label"></label>
                <input asp-for="SoLuongSvToiDa" class="form-control" />
                <span asp-validation-for="SoLuongSvToiDa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuongSvHienTai" class="control-label"></label>
                <input asp-for="SoLuongSvHienTai" value="0" class="form-control" readonly />
                <span asp-validation-for="SoLuongSvHienTai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KhuVuc" class="control-label"></label>
                <select asp-for="KhuVuc" class ="form-control" asp-items="ViewBag.KhuVuc"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-area="Admin" asp-controller="Phongs">Quay lại</a>
</div>


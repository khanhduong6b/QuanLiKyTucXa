@model IEnumerable<QuanLiKyTucXa.Models.SinhVien>

@{
    ViewData["Title"] = "Index";
    ViewBag.contrl = "SinhViens";

}

<h1>Quản lý sinh viên</h1>

<p>
    <a asp-action="Create" asp-area="Admin" asp-controller="SinhViens">Thêm mới</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Mssv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GioiTinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgaySinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lop)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Khoa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sdt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoGiuong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TinhTrang)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Mssv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>
                <td>
                    @if (item.GioiTinh)
                    {
                        <span>Nam</span>
                    }
                    else
                    {
                        <span>Nữ</span>
                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgaySinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lop)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Khoa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sdt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoGiuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MpNavigation.Mp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TinhTrang)
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="SinhViens" asp-area="Admin" asp-route-id="@item.Mssv">Chỉnh sửa</a> |
                    <a asp-action="Details" asp-controller="SinhViens" asp-area="Admin" asp-route-id="@item.Mssv">Chi tiết</a> |
                    <a asp-action="Delete" asp-controller="SinhViens" asp-area="Admin" asp-route-id="@item.Mssv">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>

